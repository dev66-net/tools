{
  "name": "tools-dev66-worker",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm dev:web",
    "dev:web": "vite dev --host --port 5175",
    "dev:worker": "wrangler dev --assets dist",
    "dev:main-site": "cd main-site && vite dev --host --port 5174",
    "clean": "rm -rfv ./dist",
    "build": "pnpm build:web",
    "build:web": "vite build && pnpm prerender && pnpm sitemap",
    "build:main-site": "cd main-site && pnpm build",
    "build:all": "pnpm build:web && pnpm build:main-site",
    "prerender": "vite-node web/scripts/prerender.ts",
    "preview:web": "vite preview --host",
    "preview:main-site": "cd main-site && vite preview --host",
    "deploy": "pnpm build:web && wrangler deploy --assets dist",
    "deploy:prod": "pnpm build:web && wrangler deploy --assets dist --env production",
    "deploy:main-site": "cd main-site && wrangler deploy --assets dist",
    "deploy:main-site:prod": "cd main-site && wrangler deploy --assets dist --env production",
    "deploy:all": "pnpm deploy && pnpm deploy:main-site:prod",
    "sitemap": "vite-node web/scripts/generate-sitemap.ts"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@types/three": "^0.181.0",
    "@uiw/codemirror-theme-github": "^4.25.2",
    "@uiw/react-codemirror": "^4.25.2",
    "@zip.js/zip.js": "^2.7.38",
    "cubing": "^0.60.1",
    "immutable": "^4.3.7",
    "jotai": "^2.15.0",
    "jsqr": "^1.4.0",
    "mermaid": "^11.12.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^7.9.3",
    "recoil": "^0.7.7",
    "remark-gfm": "^4.0.0",
    "three": "^0.181.1"
  },
  "devDependencies": {
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.6.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.7",
    "vite-node": "^1.6.0",
    "wrangler": "^4.42.0"
  }
}
